{
    "app-id": "de.akaflieg_freiburg.cavok.add_hours_and_minutes",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "addhoursandminutes",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "cleanup": [
        "include",
        "lib/*.a",
        "lib/*.prl",
        "lib/cmake",
        "lib/debug",
        "libexec"
    ],
    "modules": [
        {
            "name": "qtbase",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qt/qtbase.git",
                    "tag": "v6.2.0"
                }
            ],
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DQT_BUILD_EXAMPLES_BY_DEFAULT=OFF",
                "-DQT_BUILD_TESTS_BY_DEFAULT=OFF"
            ]
        },
        {
            "name": "qtsvg",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qt/qtsvg.git",
                    "tag": "v6.2.0"
                }
            ],
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_FIND_ROOT_PATH:PATH=/app",
                "-DCMAKE_BUILD_TYPE:STRING=Release"
            ]
        },
        {
            "name": "qttools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qt/qttools.git",
                    "tag": "v6.2.0"
                }
            ],
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_FIND_ROOT_PATH:PATH=/app",
                "-DCMAKE_BUILD_TYPE:STRING=Release"
            ]
        },
        {
            "name": "qtshadertools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qt/qtshadertools.git",
                    "tag": "v6.2.0"
                }
            ],
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_FIND_ROOT_PATH:PATH=/app",
                "-DCMAKE_BUILD_TYPE:STRING=Release"
            ]
        },
        {
            "name": "qtdeclarative",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qt/qtdeclarative.git",
                    "tag": "v6.2.0"
                }
            ],
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_FIND_ROOT_PATH:PATH=/app",
                "-DCMAKE_BUILD_TYPE:STRING=Release"
            ]
        },
        {
            "name": "addHoursAndMinutes",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Akaflieg-Freiburg/addhoursandminutes.git",
                    "commit": "39c49f5"
                }
            ],
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_FIND_ROOT_PATH:PATH=/app",
                "-DCMAKE_BUILD_TYPE:STRING=Release"
            ]
        }
    ]
}